<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="@android:style/TextAppearance"/>

    <style name="TextAppearance.Title" parent="TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.SubTitle" parent="TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAppearance.Body2" parent="TextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Components.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/light_grey</item>
        <item name="titleTextColor">@color/black</item>
        <item name="titleTextAppearance">@style/TextAppearance.Toolbar</item>
    </style>

    <style name="TextAppearance.Toolbar" parent="TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>